{% extends 'base.html.twig' %}
{%  block pagestyle %}
    <!--page level css -->
    <link href="{{ asset ('bundles/app/vendors/jasny-bootstrap/css/jasny-bootstrap.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset ('bundles/app/vendors/x-editable/css/bootstrap-editable.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset ('bundles/app/css/pages/user_profile.css') }}" rel="stylesheet" type="text/css" />
    <!--page level css -->
    <link href="{{ asset('bundles/app/vendors/magnifier/css/imgmagnify.css') }}" rel="stylesheet" />
    <!--end of page level css-->
    <!--map-->

{% endblock %}
{% block body %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Mon profil</h1>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('nada_default_index') }}">
                        <i class="livicon" data-name="home" data-size="16" data-color="#000"></i>
                        Dashboard
                    </a>
                </li>

                <li class="active">Mon Profil </li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content paddingleft_right15">
            <div class="row">
                <div class="panel">
                    <div class="panel-heading" style="background-color: #A6192E;color:#ffffee">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="panel-title">
                                    <i class="livicon" data-name="user" data-size="16" data-loop="true" data-c="#fff" data-hc="white"></i>
                                    {{ userf.reNom }} &nbsp {{  userf.rePrenom }}
                                </h4>
                            </div>

                        </div>
                    </div>

                    <br />
                    <div class="panel-body">


                        <div class="col-md-4">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <div class="fileinput-new thumbnail img-file">
                                    {% if userf.imageName is null %}
                                        <img src="{{ asset('images/defaultuser.jpg') }}" class=" img-fluid "  alt="riot">

                                    {% else %}
                                        <img src="{{ asset('images/products/'~userf.imageName) }}"  class=" img-fluid "  alt="riot">
                                    {% endif %}
                                </div>


                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped" id="users">

                                        <tr>
                                            <td>Nom d'utilisateur</td>
                                            <td>
                                                <a href="#" data-pk="1" class="editable" data-title="Edit User Name">{{ userf.username }}</a>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>E-mail</td>
                                            <td>
                                                <a href="#" data-pk="1" class="editable" data-title="Edit E-mail">{{ userf.email }}</a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Status</td>
                                            <td>
                                                <a href="#" id="status"  data-pk="1" value="Active" style="color: green" >Active</a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Date de Cr√©ation</td>
                                            <td>
                                                {{ userf.reDatecreation |date}}
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- row--> </section>
    </aside>
{% endblock %}
{% block js %}
    <!-- begining of page level js -->
    <!-- Bootstrap WYSIHTML5 -->
    <script  src="{{ asset('bundles/app/vendors/jasny-bootstrap/js/jasny-bootstrap.js') }}" type="text/javascript"></script>
    <script  src="{{ asset('bundles/app/vendors/x-editable/jquery.mockjax.js') }}" type="text/javascript"></script>
    <script href="{{ asset('bundles/app/vendors/magnifier/imgmagnify.js') }}" type="text/javascript" ></script>


    <script  src="{{ asset('bundles/app/js/pages/user_profile.js') }}" type="text/javascript"></script>

    <!-- end of page level js -->
    >
    <script>
        $('#count').each(function () {
            $(this).prop('Counter',0).animate({
                Counter: $(this).text()
            }, {
                duration: 2500,
                easing: 'swing',
                step: function (now) {
                    $(this).text(Math.ceil(now));
                }
            });
        });

    </script>

{% endblock %}