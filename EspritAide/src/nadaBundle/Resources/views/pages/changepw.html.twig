{% extends 'base.html.twig' %}
{%  block pagestyle %}
    <!--page level css -->
    <link href="{{ asset ('bundles/app/vendors/jasny-bootstrap/css/jasny-bootstrap.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset ('bundles/app/vendors/x-editable/css/bootstrap-editable.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset ('bundles/app/css/pages/user_profile.css') }}" rel="stylesheet" type="text/css" />
    <!--page level css -->
    <link href="{{ asset('bundles/app/vendors/magnifier/css/imgmagnify.css') }}" rel="stylesheet" />
    <!--end of page level css-->
    <!--map-->

{% endblock %}
{% block body %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Changer mot de passe </h1>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('nada_default_index') }}">
                        <i class="livicon" data-name="home" data-size="16" data-color="#000"></i>
                        Dashboard
                    </a>
                </li>

                <li class="active">Changer mot de passe  </li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content paddingleft_right15">
            <div class="row">
                <div class="panel">
                    <div class="panel-heading" style="background-color: #A6192E;color:#ffffee">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="panel-title">
                                    <i class="livicon" data-name="user" data-size="16" data-loop="true" data-c="#fff" data-hc="white"></i>
                                    {{ userf.reNom }} &nbsp {{  userf.rePrenom }}
                                </h4>
                            </div>

                        </div>
                    </div>

                    <br />
                    <div class="panel-body">

                        <div class="row">
                            <div class="col-md-12 pd-top">
                                {{ form_start(form, {'attr': {'class':'form-horizontal' }} ) }}

                                <div class="form-body">
                                    <div class="form-group">
                                        <label for="inputpassword" class="col-md-3 control-label">
                                            Mot de passe
                                            <span class='require'>*</span>
                                        </label>
                                        <div class="col-md-9">
                                            <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="livicon" data-name="key" data-size="16" data-loop="true" data-c="#000" data-hc="#000"></i>
                                                            </span>
                                                {{ form_widget(form.current_password, {'attr': {'class': 'form-control','placeholder':'Mot de passe','type':'password' }}) }}

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputpassword" class="col-md-3 control-label">
                                            Nouveau Mot de passe
                                            <span class='require'>*</span>
                                        </label>
                                        <div class="col-md-9">
                                            <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="livicon" data-name="key" data-size="16" data-loop="true" data-c="#000" data-hc="#000"></i>
                                                            </span>
                                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control','placeholder':'Nouveau Mot de passe','type':'password' }}) }}

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputnumber" class="col-md-3 control-label">
                                            Confirmer Mot de passe
                                            <span class='require'>*</span>
                                        </label>
                                        <div class="col-md-9">
                                            <div class="input-group">
                                                            <span class="input-group-addon">
                                                                <i class="livicon" data-name="key" data-size="16" data-loop="true" data-c="#000" data-hc="#000"></i>
                                                            </span>
                                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control','placeholder':'Confirmer Mot de passe','type':'password' }}) }}

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button type="submit" class="btn btn-primary">soumettre
                                        </button>
                                        &nbsp;
                                        <button type="button" class="btn btn-danger">Annuler</button>
                                        &nbsp;
                                        <input type="reset" class="btn btn-default hidden-xs" value="Remettre"></div>
                                </div>
                                {{ form_end(form) }}


                            </div>
                        </div>
                    </div>

                    <!-- row--> </section>
    </aside>
{% endblock %}
{% block js %}
    <!-- begining of page level js -->
    <!-- Bootstrap WYSIHTML5 -->
    <script  src="{{ asset('bundles/app/vendors/jasny-bootstrap/js/jasny-bootstrap.js') }}" type="text/javascript"></script>
    <script  src="{{ asset('bundles/app/vendors/x-editable/jquery.mockjax.js') }}" type="text/javascript"></script>
    <script href="{{ asset('bundles/app/vendors/magnifier/imgmagnify.js') }}" type="text/javascript" ></script>


    <script  src="{{ asset('bundles/app/js/pages/user_profile.js') }}" type="text/javascript"></script>

    <!-- end of page level js -->
    >
    <script>
        $('#count').each(function () {
            $(this).prop('Counter',0).animate({
                Counter: $(this).text()
            }, {
                duration: 2500,
                easing: 'swing',
                step: function (now) {
                    $(this).text(Math.ceil(now));
                }
            });
        });

    </script>

{% endblock %}