{% block body %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Nos Cours </h1>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('nada_default_index') }}">
                        <i class="livicon" data-name="home" data-size="16" data-color="#000"></i>
                        Dashboard
                    </a>
                </li>

                <li class="active">Les Cours</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content paddingleft_right15">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6 margin_10 animated fadeInLeftBig">
                    <!-- Trans label pie charts strats here-->
                    <div class="lightbluebg no-radius"style="background-color: #515763">
                        <div class="panel-body squarebox square_boxs">
                            <div class="col-xs-12 pull-left nopadmar">
                                <div class="row">
                                    <div class="square_box col-xs-7 text-right">
                                        <span>Cours</span>
                                        <div class="number" id="count">{{ count }}</div>
                                    </div>
                                    <i class="livicon pull-right" data-name="notebook" data-loop="true" data-color="#ffffff" data-hovercolor="#ffffee" data-size="70"></i>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 margin_10 animated fadeInLeftBig">
                    <!-- Trans label pie charts strats here-->
                    <div class="lightbluebg no-radius" style="background-color: #A6192E"><a href="{{ path('add_fichier') }}">
                            <div class="panel-body squarebox square_boxs">
                                <div class="col-xs-12 pull-left nopadmar">
                                    <div class="row">
                                        <div class="square_box col-xs-7 text-right">
                                            <span style="color: #ffffff;">Nouveau cours </span>
                                            <div class="number">  <i class="livicon pull-right" data-name="plus" data-loop="true" data-color="#ffffff" data-hovercolor="#ffffee" data-size="40"></i>

                                            </div>
                                        </div>
                                        <i class="livicon pull-right" data-name="notebook" data-loop="true" data-color="#ffffff" data-hovercolor="#ffffee" data-size="70"></i>

                                    </div>
                                    <div class="row">

                                    </div>


                                </div>
                            </div></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="panel">
                    <div class="panel-heading" style="background-color: #A6192E;color:#ffffee">
                        <h4 class="panel-title">
                            <i class="livicon" data-name="user" data-size="16" data-loop="true" data-c="#fff" data-hc="white"></i>
                            Liste des cours
                        </h4>
                    </div>
                    <br />
                    <div class="panel-body">

                        <table id="table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th> Nom </th>
                                <th> Module </th>
                                <th> Niveau </th>
                                <th> fichier </th>
                                <th> Ajouter par </th>
                                <th> PDF </th>
                                <th> Action </th>


                            </tr>
                            </thead>
                            <tfoot>

                            <tr>
                                <th> Nom </th>
                                <th> Module </th>
                                <th> Niveau </th>
                                <th> fichier </th>
                                <th> Ajouter par </th>
                                <th> PDF </th>
                                <th> Action </th>



                            </tr>
                            </tfoot>

                            <tbody>

                            {% for user in fichier %}
                                <tr>



                                    <td>   {{ user.nom }} </td>
                                    <td>    {{ user.module  }} </td>
                                    <td>    {{ user.idClasse.niveau  }} </td>

                                    <td>      <a href="{{ asset('images/products/'~user.imageName) }}"  class=" img-fluid "  download="" alt="riot">download<a> </td>
                                    <td>    {{ user.idUser.reNom  }} {{ user.idUser.reprenom  }} </td>
                                    <td>                                     <embed src="{{ asset('images/products/'~user.imageName) }}" width="500" height="375" type='application/pdf'>
                                    </td>
                                    <td>  <a href="{{ path('edit_fichier',{'idx': user.id}) }}">

                                            <button type="button" class="btn btn-warning" >EDIT</button></a>
                                        &nbsp;

                                        <a href="{{ path('archive_fichier',{'id': user.id}) }}">

                                            <button type="button" class="btn btn-danger" >Archiver</button></a></td>






                                </tr>






                                </tr>

                            {% endfor %}
                            </tbody>
                        </table>

                        <!-- Modal for showing delete confirmation -->

                    </div>
                </div>
            </div>

            <!-- row--> </section>
    </aside>
{% endblock %}
{% block js %}
    <script>
        $('#count').each(function () {
            $(this).prop('Counter',0).animate({
                Counter: $(this).text()
            }, {
                duration: 2500,
                easing: 'swing',
                step: function (now) {
                    $(this).text(Math.ceil(now));
                }
            });
        });
    </script>
    <script type="text/javascript" src="{{ asset('jTable/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript">$(document).ready(function() {
            $('#table').DataTable();
        } );
    </script>
{% endblock %}